          <rangedTech>1</rangedTech>
          <meleeTech>1</meleeTech>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/TraitDef[defName="Brawler"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
        <value>
          <rangedTech>-1</rangedTech>
